<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movierecommendationapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <!-- Main Activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Movies List Activity -->
        <activity android:name=".movieslist" />

        <!-- Recommended Movies Activity -->
        <activity android:name=".recommendedmovies" />

        <!-- Card View Activity (Optional) -->
        <activity android:name=".cardview.CardViewActivity" />
    </application>

</manifest>
